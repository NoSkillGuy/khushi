<div class="container">
  <div class="card card-login mx-auto mt-5">
    <div class="card-header">Login</div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: users_pre_otp_path, method: :post, remote: true, html: { id: "step-1" }) do |f| %>
          <div class="form-label-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder: 'Email address' %>
            <%= f.label :email %>
          </div><br>
          <%= f.submit "Next", class: "btn btn-primary btn-block" %>
      <% end %>      

      <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "d-none", id: "step-2"}) do |f| %>
        <div class="form-group">
          <div class="form-label-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder: 'Email address' %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
            <%= f.label :password %>
          </div>
        </div>

        <div class="form-group">
          <div class="form-label-group">
            <%= f.text_field :otp_attempt, autocomplete: "off", placeholder: '2FA Code', class: 'form-control d-none' %>
            <%#= f.label :otp_attempt %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
<!--                   <label>Remember Password</label> -->
            </div>
          </div>
        <% end -%>
        <%= f.submit "Login", class: 'btn btn-primary btn-block' %>
      <% end %>
      <div class="text-center">
        <div class="mt-3">
          <%= render "devise/shared/links" %>  
        </div>
      </div>
    </div>
  </div>
</div>